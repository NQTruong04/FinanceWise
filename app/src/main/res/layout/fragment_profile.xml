<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_green"
    tools:context=".view.profile.ProfileFragment">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/tv_back_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="43dp"
            android:gravity="center"
            android:text="@string/profile"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_notifications" />
    </LinearLayout>

    <!-- Nội dung nền trắng cong -->
    <LinearLayout
        android:id="@+id/menu_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/rounded_green_white_background"
        android:padding="24dp"
        android:layout_marginTop="90dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Smith"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tv_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID: 25030004  "
            android:gravity="center"
            android:textSize="16sp" />
        <LinearLayout
            android:id="@+id/btn_edit_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/iv_edit_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_edit_profile" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:textSize="16sp"
                android:text="@string/edit_profile"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_security"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_security"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_security" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:textSize="16sp"
                android:text="@string/security"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_setting" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:textSize="16sp"
                android:text="@string/setting"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_help"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_help" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:textSize="16sp"
                android:text="@string/help"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="30dp">
            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/bg_circle_icon"
                android:src="@drawable/ic_logout" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="17dp"
                android:paddingEnd="20dp"
                android:textSize="16sp"
                android:text="@string/logout"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Avatar chồng lên đường cong -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/default_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_avatar_background"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />
    <!-- avatar nằm thấp hơn để chồng lên menu_items -->
</androidx.constraintlayout.widget.ConstraintLayout>
