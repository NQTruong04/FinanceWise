<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.analysis.SearchFragment">

    <LinearLayout
        android:id="@+id/ll_header_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <ImageView
                android:id="@+id/tv_back_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="25dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/tv_category_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="43dp"
                android:gravity="center"
                android:text="@string/search"
                android:textSize="25sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_notification_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_notifications" />
        </LinearLayout>
        <!-- Search Bar -->
        <EditText
            android:id="@+id/et_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_green_white_tvbg"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:hint="@string/search"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_green_white_background"
            android:orientation="vertical"
            android:paddingTop="35dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="0dp">
            <!-- Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/sp_category"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_light_green_background"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="30dp"
                android:prompt="@string/select_category"
                android:entries="@array/category_array"/>
            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/ll_date_picker"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="@drawable/rounded_light_green_background"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:layout_marginBottom="30dp"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:id="@+id/tv_selected_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/april_30_2024"
                    android:textSize="16sp"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_calender" />

            </LinearLayout>
            <!-- Report Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <RadioGroup
                android:id="@+id/rg_report_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <RadioButton
                    android:id="@+id/rb_income"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/income"
                    android:textSize="16sp"
                    android:buttonTint="#4CAF50"
                    android:checked="false"
                    android:textColor="@android:color/black" />

                <RadioButton
                    android:id="@+id/rb_expense"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/expense"
                    android:textSize="16sp"
                    android:buttonTint="#4CAF50"
                    android:textColor="@android:color/black"
                    android:checked="true" />

            </RadioGroup>
            <!-- Search Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_search"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:text="@string/search"
                android:textSize="16sp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="@color/main_green"
                app:cornerRadius="24dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_transaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:layout_marginBottom="24dp"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>