<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.intro.Intro2Fragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#00D09E">
        <TextView
            android:id="@+id/app_intro_text"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:text="Are you ready to \n take control of \n your finances?"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="32sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:background="@drawable/rounded_green_white_background">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/image_intro2"/>
            <TextView
                android:id="@+id/next_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Next"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="28sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>