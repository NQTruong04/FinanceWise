<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/intro1Fragment">
    <fragment
        android:id="@+id/intro1Fragment"
        android:name="com.example.financewise.view.intro.Intro1Fragment"
        android:label="Intro 1">
        <action
            android:id="@+id/action_intro1_to_intro2"
            app:destination="@id/intro2Fragment"
            app:popUpTo="@id/intro1Fragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/intro2Fragment"
        android:name="com.example.financewise.view.intro.Intro2Fragment"
        android:label="Intro 2">
        <action
            android:id="@+id/action_intro2_to_launch"
            app:destination="@id/launchFragment"
            app:popUpTo="@id/intro2Fragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/launchFragment"
        android:name="com.example.financewise.view.splash.LaunchFragment"
        android:label="Launch">
        <action
            android:id="@+id/action_launch_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/launchFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.financewise.view.auth.LoginFragment"
        android:label="Login">
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.financewise.view.home.HomeFragment"
        android:label="Home">
        <action
            android:id="@+id/action_home_to_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/transactionFragment"
        android:name="com.example.financewise.view.transaction.TransactionFragment"
        android:label="Transaction">
        <action
            android:id="@+id/action_transaction_to_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/transactionFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_transaction_to_add_transaction"
            app:destination="@id/addTransactionFragment"
            app:popUpTo="@id/transactionFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/addTransactionFragment"
        android:name="com.example.financewise.view.transaction.AddTransactionFragment"
        android:label="Add Transaction">
        <action
            android:id="@+id/action_add_transaction_to_transaction"
            app:destination="@id/transactionFragment"
            app:popUpTo="@id/addTransactionFragment"
            app:popUpToInclusive="true">
            <argument
                android:name="userId"
                app:argType="string" />
        </action>
    </fragment>
</navigation>